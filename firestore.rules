rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isTestUser() {
      return request.resource.data.userId is string && 
             request.resource.data.userId.matches('test_user_.*');
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isDriver(driverId) {
      return isAuthenticated() && request.auth.uid == driverId;
    }
    
    // ============================================================================
    // KOMMUTE ROUTES
    // ============================================================================
    
    match /kommute_routes/{routeId} {
      // Users can read their own routes or test routes (no auth required for test)
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                     (resource.data.userId is string && resource.data.userId.matches('test_user_.*'));
      
      // Users can create routes for themselves or test routes (no auth required for test)
      allow create: if (isAuthenticated() && request.resource.data.userId == request.auth.uid) || 
                       (request.resource.data.userId is string && request.resource.data.userId.matches('test_user_.*'));
      
      // Users can update their own routes or test routes (no auth required for test)
      allow update: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                       (resource.data.userId is string && resource.data.userId.matches('test_user_.*'));
      
      // Users can delete their own routes or test routes (no auth required for test)
      allow delete: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                       (resource.data.userId is string && resource.data.userId.matches('test_user_.*'));
    }
    
    // ============================================================================
    // KOMMUTE TRIPS
    // ============================================================================
    
    match /kommute_trips/{tripId} {
      // Users can read their own trips or test trips (no auth required for test)
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                     (resource.data.userId is string && resource.data.userId.matches('test_user_.*'));
      
      // Users can create trips for themselves or test trips (no auth required for test)
      allow create: if (isAuthenticated() && request.resource.data.userId == request.auth.uid) || 
                       (request.resource.data.userId is string && request.resource.data.userId.matches('test_user_.*'));
      
      // Users can update their own trips or test trips (no auth required for test)
      allow update: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                       (resource.data.userId is string && resource.data.userId.matches('test_user_.*'));
      
      // Users can delete their own trips or test trips (no auth required for test)
      allow delete: if (isAuthenticated() && resource.data.userId == request.auth.uid) || 
                       (resource.data.userId is string && resource.data.userId.matches('test_user_.*'));
    }
    
    // ============================================================================
    // TRACKING POINTS
    // ============================================================================
    
    match /kommute_tracking_points/{pointId} {
      // Users can read tracking points for their trips or test points
      allow read: if true;
      
      // Users can create tracking points or test points
      allow create: if true;
      
      // Test points can be deleted
      allow delete: if resource.data.tripId is string && resource.data.tripId.matches('test_trip_.*');
      
      // No updates for tracking points (immutable)
      allow update: if false;
    }
    
    // ============================================================================
    // TRIP CHAINS
    // ============================================================================
    
    match /kommute_trip_chains/{chainId} {
      // Drivers can read their own chains
      allow read: if isAuthenticated() && resource.data.driverId == request.auth.uid;
      
      // Drivers can create chains for themselves
      allow create: if isAuthenticated() && request.resource.data.driverId == request.auth.uid;
      
      // Drivers can update their own chains
      allow update: if isAuthenticated() && resource.data.driverId == request.auth.uid;
      
      // Drivers can delete their own chains
      allow delete: if isAuthenticated() && resource.data.driverId == request.auth.uid;
    }
    
    // ============================================================================
    // TRIP QUEUE
    // ============================================================================
    
    match /kommute_trip_queue/{entryId} {
      // All authenticated users can read active queue entries
      allow read: if isAuthenticated();
      
      // Users can create queue entries
      allow create: if isAuthenticated();
      
      // Drivers can update queue entries (to accept/reject)
      allow update: if isAuthenticated();
      
      // Users can delete their own queue entries
      allow delete: if isAuthenticated();
    }
    
    // ============================================================================
    // DRIVER AVAILABILITY
    // ============================================================================
    
    match /kommute_driver_availability/{driverId} {
      // All authenticated users can read driver availability
      allow read: if isAuthenticated();
      
      // Drivers can create/update their own availability
      allow create, update: if isAuthenticated() && driverId == request.auth.uid;
      
      // Drivers can delete their own availability
      allow delete: if isAuthenticated() && driverId == request.auth.uid;
    }
    
    // ============================================================================
    // ANALYTICS (Read-only for users, write for system)
    // ============================================================================
    
    match /kommute_analytics/{docId} {
      // Users can read their own analytics
      allow read: if isAuthenticated();
      
      // Only system can write analytics (use Firebase Admin SDK)
      allow write: if false;
    }
    
    // ============================================================================
    // DEFAULT DENY ALL
    // ============================================================================
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
